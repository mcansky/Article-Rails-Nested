<% form_for @day do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </p>
  <p>
    <%= f.label :titre %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :evenement %><br />
	  <%= f.collection_select(:event_id, Event.all, :id, :name, {:prompt => true}) %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
